!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Facebook Photo Site
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    .site-wrapper
      .site-wrapper-inner
        .cover-container
          .masthead.clearfix
            .inner
              %h3.masthead-brand Facebook Photo Site
              %nav.nav.nav-masthead
                %a.nav-link.active{:href => "#"} Home
                - if user_signed_in?
                  - if current_user.admin?
                    %a.nav-link{href: admin_root_path} Admin
                  %a.nav-link{href: destroy_user_session_path} Logout
          = yield
          .mastfoot
            .inner
              %p
                Created by
                = link_to 'AndBobsYourUncle', 'https://github.com/AndBobsYourUncle'
